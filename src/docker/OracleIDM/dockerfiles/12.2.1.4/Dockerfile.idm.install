# This is the Dockerfile for Oracle IDM
#
# REQUIRED FILES TO BUILD THIS IMAGE
# ----------------------------------
# See idm.download file in the install directory
#
# Pull base image
# ---------------
FROM oracle/idm:12.2.1.4

# Maintainer
# ----------
MAINTAINER Monica Riccelli <monica.riccelli@oracle.com>

USER root
RUN yum install -y libXext
RUN yum install -y libXext.x86_64
RUN yum install -y libXrender.x86_64
RUN yum install -y libXtst.x86_64

USER oracle
#
# Define default command to start bash.
#
WORKDIR $ORACLE_HOME
CMD ["/u01/oracle/dockertools/createDomainAndStart.sh"]